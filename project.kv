<StartPage>

    start:start

    BoxLayout:
        size: root.width, root.height
        padding: 50
        GridLayout:

            cols: 1
            size: root.width, root.height

            MDLabel:

                text: "Computer Lab Reservation"
                halign: "center"

            MDFillRoundFlatButton:
                id: start
                text: "Start"
                on_press: root.start_button()
                size: 50, 100
                size_hint: 0.5, 0.3


<LoginPage>

    username:username
    pw:pw
    login:login
    address:address
    port:port

    BoxLayout:
        size: root.width, root.height
        padding: 50

        FloatLayout:
            pos_hint: {'center_y': 0.5}

            MDTextField:
                hint_text: "Username:"
                helper_text: "This field is required"
                helper_text_mode: "on_focus"
                id: username
			    multiline:False
			    text:""
			    pos_hint: {'x': 0, 'y': 0.7}

            MDTextField:
                hint_text: "Password:"
                helper_text: "This field is required"
                helper_text_mode: "on_focus"
                id: pw
		        multiline:False
		        password: True
			    text:""
			    pos_hint: {'x': 0, 'y': 0.6}

		    MDTextField:
                hint_text: "First Character of Address:"
                helper_text: "This field is required"
                helper_text_mode: "on_focus"
                id: address
		        multiline:False
			    text:""
			    pos_hint: {'x': 0, 'y': 0.5}

		    MDTextField:
                hint_text: "Port Number:"
                helper_text: "This field is required"
                helper_text_mode: "on_focus"
                id: port
		        multiline:False
			    text:""
			    pos_hint: {'x': 0, 'y': 0.4}

		    MDFillRoundFlatButton:
		        id: login
			    text: "Log In"
                pos_hint: {'x': 0, 'y': 0.3}
			    on_press: root.login_button()


<TestPage>
    tool_bar:tool_bar

    reservation_page:reservation_page
    date_label:date_label
    time_label:time_label
    slot_id_label:slot_id_label

    history:history

    cancel_list:cancel_list

    username:username

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            id:tool_bar
            title:"Computer Lab Reservation"

        MDBottomNavigation:
            MDBottomNavigationItem:
                name: "Reservation"
                text: 'New'
                icon: "timeline-plus-outline"
                id: reservation_page
                on_tab_press: root.reservation_page_button()
                BoxLayout:
                    size: root.width, root.height
                    padding: 50

                    ScrollView:
                        size: self.size

                        GridLayout:
                            cols: 1
                            size_hint_y: None
                            row_default_height: '100dp'
                            row_force_default: True
                            minimum_height: self.height
                            height: self.minimum_height

                            GridLayout:
                                cols: 2
                                MDLabel:
                                    id:date_label
                                    text: "Selected Date: N/A"

                                MDIconButton:
                                    icon: "pen"
                                    icon_size: "64sp"
                                    on_release: root.Show_Date_Picker()

                                MDLabel:
                                    id: time_label
                                    text: "Selected Timeslot: N/A"

                                MDIconButton:
                                    icon: "pen"
                                    icon_size: "64sp"
                                    on_release: root.time_slot_picker()

                                MDLabel:
                                    id: slot_id_label
                                    text: ""

                            MDLabel:
                                text: ""

                            MDFillRoundFlatButton:
                                text: "Confirm"
                                size_hint: 0.5, 0.3
                                on_release: root.confirm_booking()


            MDBottomNavigationItem:
                name: "History"
                text: 'History'
                icon: "timetable"

                on_tab_press: root.booking_history('history')


                BoxLayout:
                    size: root.width, root.height
                    padding: 50

                    ScrollView:
                        size: self.size
                        MDList:
                            id: history

            MDBottomNavigationItem:
                name: "Canceled"
                text: 'Canceled'
                icon: "cancel"
                on_tab_press: root.booking_history('cancel')


                BoxLayout:
                    size: root.width, root.height
                    padding: 50

                    ScrollView:
                        size: self.size
                        MDList:
                            id: cancel_list

            MDBottomNavigationItem:
                name: "Logout"
                text: 'Logout'
                icon: "logout"
                on_tab_press: root.update_username()
                BoxLayout:
                    size: root.width, root.height
                    padding: 50

                    ScrollView:
                        size: self.size

                        GridLayout:
                            cols: 1
                            size_hint_y: None
                            row_default_height: '100dp'
                            row_force_default: True
                            minimum_height: self.height
                            height: self.minimum_height

                            GridLayout:
                                cols: 2
                                MDIcon:
                                    icon: "account"
                                    icon_size: "64sp"


                                MDLabel:
                                    id:username
                                    text:"test"



                            MDLabel:
                                text: ""

                            MDFillRoundFlatButton:
                                text: "Logout"
                                size_hint: 0.5, 0.3
                                on_release: root.confirm_logout_popup()

